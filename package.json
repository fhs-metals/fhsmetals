    "verbose": "true"
  },
  "bugs": "https://github.com/fhs-metals/fhs-metals/issues",
  "dependencies": {
    "reshape-standard": "^3.0.0",
    "spike": "^2.0.0",
    "spike-css-standards": "^3.0.0",
    "spike-datocms": "^2.2.2",
    "spike-js-standards": "^2.0.2",
    "spike-optimize": "^0.1.2",
    "spike-page-id": "^1.0.0",
    "sugarml": "^0.6.0",
    "sugarss": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^4.7.1",
    "eslint-config-prettier": "^2.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0"
  },
  "homepage": "https://github.com/fhs-metals/fhs-metals",
  "main": "app.js",
  "private": true,
  "repository": "https://github.com/fhs-metals/fhs-metals",
  "scripts": {
    "lint": "npm run -s format && npm run -s eslint",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test ava",
    "start": "spike watch",
    "build": "spike compile",
    "prod": "NODE_ENV=production spike compile -e production",
    "eslint": "eslint --format=node_modules/eslint-formatter-pretty .",
    "format": "prettier --write '**/*.js' '**/*.json'"
  },
  "lint-staged": {
    "**/*.js": ["npm run format", "git add"]
  },
  "eslintConfig": {
    "extends": ["standard", "prettier"],
    "plugins": [],
    "env": {}
  },
  "eslintIgnore": ["node_modules", "coverage", "dist", "public"],
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
