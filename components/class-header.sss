.g-class-header
  position: relative
  max-height: 400px
  overflow: hidden
  display: flex
  align-items: center

  & img
    width: 100%
    display: block

  & h1
    position: absolute
    bottom: 0
    padding: 10px
    margin: 0
    background-image: linear-gradient(rgba(255, 0, 0, 0), rgba(0, 0, 0, 0.63))
    color: white
    width: 100%
