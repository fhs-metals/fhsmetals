.g-skill-card
  background: gray(95%)
  display: flex
  border-radius: 3px
  margin: 40px auto
  box-shadow: 2px 2px 10px 2px gray(0%, 25%)
  height: 300px
  width: 600px

  @media screen and (width <= 620px)
    flex-wrap: wrap
    width: 300px
    height: auto

  & div
    height: 100%
    width: 100%
