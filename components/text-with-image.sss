.g-text-with-image
  width: 100%
  margin: 0 auto
  padding: 30px
  max-width: 800px
  display: flex

  @media screen and (width <= 800px)
    flex-direction: column
    align-items: center
    max-width: 500px

    & .text
      width: 100%

  @media screen and (width >= 800px)

    & .text
      margin-left: 30px

      & p:nth-of-type(1)
        margin-top: 0

  & .text
    flex-grow: 1
    text-align: justify
