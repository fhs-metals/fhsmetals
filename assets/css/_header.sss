.g-header
  width: 100%
  background: var(--main)
  color: white
  text-align: right

  & a
    color: white
    text-decoration: none
    padding: 15px 10px
    display: inline-block

    &:hover, &:focus
      background-color: var(--main-offset)

  & ul
    margin: 0
    padding: 0

  & li
    display: inline-block
